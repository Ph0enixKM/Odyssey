{
  "name": "Odyssey",
  "version": "1.3.7",
  "description": "Rich Text Editor designed for writers novelists and poets.",
  "main": "app/app.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-forge package Odyssey --asar=true",
    "build-win": "electron-forge package Odyssey --platform=win32 --arch=x64 --asar=true",
    "build-win32": "electron-forge package Odyssey --platform=win32 --arch=ia32 --asar=true",
    "build-unix": "electron-forge package Odyssey --platform=linux --arch=x64 --asar=true",
    "build-unix32": "electron-forge package Odyssey --platform=linux --arch=ia32 --asar=true",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ph0enixKM/Odyssey.git"
  },
  "keywords": [
    "odyssey",
    "text",
    "editor",
    "writers",
    "novelists",
    "poets"
  ],
  "author": "Paweł Karaś (Phoenix)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ph0enixKM/Odyssey/issues"
  },
  "homepage": "https://github.com/Ph0enixKM/Odyssey#readme",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn",
        "icon": "app/assets/icons/logo.ico"
      },
      "electronWinstallerConfig": {
        "name": "Odyssey"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "Paweł Karaś (Phoenix)",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "Odyssey"
      }
    }
  },
  "dependencies": {
    "cargodb": "^1.0.2",
    "electron": "^1.7.12",
    "electron-compile": "^6.4.2",
    "electron-spellchecker": "^1.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "pixi.js": "^4.7.0",
    "spell": "^1.0.0"
  },
  "devDependencies": {
    "electron-forge": "^5.1.1",
    "electron-prebuilt-compile": "1.8.4"
  }
}
